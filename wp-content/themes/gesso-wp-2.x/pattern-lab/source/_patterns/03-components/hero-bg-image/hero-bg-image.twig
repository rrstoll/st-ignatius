{%
  set classes = [
    'hero-bg-image',
    custom_classes ? custom_classes,
  ]|join(' ')|trim
%}

<div class="{{ classes }}" style="background-image: url({{ image }});">
  <div class="hero-bg-image__content">
    {% if has_title %}
      <h1 class="hero-bg-image__title"><a href="/">{{ title }}</a></h1>
    {% endif %}
  </div>
</div>
